generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  nickname      String?
  coil          String? // optional: could assign user to a coil
  scrollIndex   Int?
  token         String?   @unique
  tokenExpires  DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
